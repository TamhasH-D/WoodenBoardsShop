# Frontend Environment Configuration Template
# Copy this file to .env in each frontend service directory and customize

### Global Frontend Configuration ###
# React environment mode (development, production, test)
NODE_ENV=production

# Backend API URL for all frontend services
# Development: http://localhost:8000
# Production: https://your-api-domain.com
REACT_APP_API_URL=http://localhost:8000

### Frontend Service Ports ###
# Port assignments for each frontend service
FRONTEND_ADMIN_PORT=8080
FRONTEND_SELLER_PORT=8081
FRONTEND_BUYER_PORT=8082

### Admin Frontend Configuration ###
# Administrative dashboard settings
FRONTEND_ADMIN_API_URL=http://localhost:8000
FRONTEND_ADMIN_API_TIMEOUT=30000
FRONTEND_ADMIN_ENABLE_ANALYTICS=false
FRONTEND_ADMIN_ENABLE_DEBUG_TOOLS=false

### Seller Frontend Configuration ###
# Business dashboard settings for sellers
FRONTEND_SELLER_API_URL=http://localhost:8000
FRONTEND_SELLER_API_TIMEOUT=30000
FRONTEND_SELLER_ENABLE_ANALYTICS=false
FRONTEND_SELLER_ENABLE_DEBUG_TOOLS=false

### Buyer Frontend Configuration ###
# Customer marketplace settings for buyers
FRONTEND_BUYER_API_URL=http://localhost:8000
FRONTEND_BUYER_API_TIMEOUT=30000
FRONTEND_BUYER_ENABLE_ANALYTICS=false
FRONTEND_BUYER_ENABLE_DEBUG_TOOLS=false

### Optional Frontend Features ###
# Enable/disable optional features
# REACT_APP_ENABLE_PWA=false
# REACT_APP_ENABLE_OFFLINE_MODE=false
# REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

### Analytics and Monitoring ###
# Configure analytics services (optional)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn
# REACT_APP_HOTJAR_ID=your-hotjar-id

### Development Tools ###
# Development and debugging tools
# REACT_APP_ENABLE_REDUX_DEVTOOLS=true
# REACT_APP_ENABLE_REACT_DEVTOOLS=true
# REACT_APP_LOG_LEVEL=debug

### Build Configuration ###
# Build-time configuration
# GENERATE_SOURCEMAP=false
# INLINE_RUNTIME_CHUNK=false
# IMAGE_INLINE_SIZE_limit=200
