# Seller Frontend Environment Configuration
# Copy this file to .env and customize for your environment

### React Configuration ###
# Environment mode
NODE_ENV=production

# Backend API URL
REACT_APP_API_URL=http://localhost:8000

### Seller Frontend Specific Settings ###
# Port for seller frontend service
PORT=3000
FRONTEND_SELLER_PORT=8081

# API configuration
FRONTEND_SELLER_API_URL=http://localhost:8000
FRONTEND_SELLER_API_TIMEOUT=30000

# Feature flags
FRONTEND_SELLER_ENABLE_ANALYTICS=false
FRONTEND_SELLER_ENABLE_DEBUG_TOOLS=false

### Optional Seller Features ###
# Enable/disable seller-specific features
# REACT_APP_ENABLE_INVENTORY_MANAGEMENT=true
# REACT_APP_ENABLE_ORDER_TRACKING=true
# REACT_APP_ENABLE_ANALYTICS_DASHBOARD=true
# REACT_APP_ENABLE_BULK_UPLOAD=true
# REACT_APP_ENABLE_CHAT_SUPPORT=true

### Business Settings ###
# Seller business configuration
# REACT_APP_DEFAULT_CURRENCY=USD
# REACT_APP_ENABLE_MULTI_CURRENCY=false
# REACT_APP_TAX_CALCULATION=auto
# REACT_APP_SHIPPING_ZONES=domestic,international

### Payment Integration ###
# Payment gateway configuration
# REACT_APP_PAYMENT_GATEWAY=stripe
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
# REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id

### Development Settings ###
# Development tools and debugging
# REACT_APP_LOG_LEVEL=info
# REACT_APP_ENABLE_MOCK_DATA=false
# REACT_APP_API_MOCK_DELAY=1000

### Build Configuration ###
# Build optimization settings
# GENERATE_SOURCEMAP=false
# INLINE_RUNTIME_CHUNK=false
# BUNDLE_ANALYZER=false
