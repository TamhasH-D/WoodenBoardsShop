# Admin Frontend Environment Configuration
# Copy this file to .env and customize for your environment

### React Configuration ###
# Environment mode
NODE_ENV=production

# Backend API URL
REACT_APP_API_URL=http://localhost:8000

### Admin Frontend Specific Settings ###
# Port for admin frontend service
PORT=3000
FRONTEND_ADMIN_PORT=8080

# API configuration
FRONTEND_ADMIN_API_URL=http://localhost:8000
FRONTEND_ADMIN_API_TIMEOUT=30000

# Feature flags
FRONTEND_ADMIN_ENABLE_ANALYTICS=false
FRONTEND_ADMIN_ENABLE_DEBUG_TOOLS=false

### Optional Admin Features ###
# Enable/disable admin-specific features
# REACT_APP_ENABLE_USER_MANAGEMENT=true
# REACT_APP_ENABLE_SYSTEM_MONITORING=true
# REACT_APP_ENABLE_AUDIT_LOGS=true
# REACT_APP_ENABLE_BULK_OPERATIONS=true

### Security Settings ###
# Admin security configuration
# REACT_APP_SESSION_TIMEOUT=3600
# REACT_APP_REQUIRE_2FA=false
# REACT_APP_PASSWORD_POLICY=strict

### Development Settings ###
# Development tools and debugging
# REACT_APP_LOG_LEVEL=info
# REACT_APP_ENABLE_MOCK_DATA=false
# REACT_APP_API_MOCK_DELAY=1000

### Build Configuration ###
# Build optimization settings
# GENERATE_SOURCEMAP=false
# INLINE_RUNTIME_CHUNK=false
# BUNDLE_ANALYZER=false
