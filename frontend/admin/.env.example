# Buyer Frontend Environment Configuration
# Copy this file to .env and customize for your environment

### React Configuration ###
# Environment mode
NODE_ENV=production

# Backend API URL
REACT_APP_API_URL=http://localhost:8000

### Buyer Frontend Specific Settings ###
# Port for buyer frontend service
PORT=3000
FRONTEND_BUYER_PORT=8082

# API configuration
FRONTEND_BUYER_API_URL=http://localhost:8000
FRONTEND_BUYER_API_TIMEOUT=30000

# Feature flags
FRONTEND_BUYER_ENABLE_ANALYTICS=false
FRONTEND_BUYER_ENABLE_DEBUG_TOOLS=false

### Optional Buyer Features ###
# Enable/disable buyer-specific features
# REACT_APP_ENABLE_WISHLIST=true
# REACT_APP_ENABLE_SHOPPING_CART=true
# REACT_APP_ENABLE_PRODUCT_REVIEWS=true
# REACT_APP_ENABLE_PRICE_ALERTS=true
# REACT_APP_ENABLE_BOARD_ANALYZER=true
# REACT_APP_ENABLE_CHAT_SUPPORT=true

### E-commerce Settings ###
# Buyer marketplace configuration
# REACT_APP_DEFAULT_CURRENCY=USD
# REACT_APP_ENABLE_GUEST_CHECKOUT=true
# REACT_APP_ENABLE_SOCIAL_LOGIN=false
# REACT_APP_PRODUCTS_PER_PAGE=20
# REACT_APP_ENABLE_PRODUCT_COMPARISON=true

### AI/ML Features ###
# Board analyzer and AI features
# REACT_APP_ENABLE_AI_RECOMMENDATIONS=true
# REACT_APP_BOARD_ANALYZER_MAX_FILE_SIZE=10485760
# REACT_APP_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp
# REACT_APP_AI_CONFIDENCE_THRESHOLD=0.7

### Payment Integration ###
# Payment gateway configuration for buyers
# REACT_APP_PAYMENT_GATEWAY=stripe
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
# REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id

### Development Settings ###
# Development tools and debugging
# REACT_APP_LOG_LEVEL=info
# REACT_APP_ENABLE_MOCK_DATA=false
# REACT_APP_API_MOCK_DELAY=1000

### Build Configuration ###
# Build optimization settings
# GENERATE_SOURCEMAP=false
# INLINE_RUNTIME_CHUNK=false
# BUNDLE_ANALYZER=false
