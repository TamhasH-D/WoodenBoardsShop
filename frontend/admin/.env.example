# Admin Frontend Environment Configuration
# Copy this file to .env and customize for your environment

### React Configuration ###
# Environment mode
NODE_ENV=production

# Backend API URL - ВАЖНО: используется для всех API запросов
REACT_APP_API_URL=http://localhost:8000

### Admin Frontend Specific Settings ###
# Port for admin frontend service
PORT=3000
FRONTEND_ADMIN_PORT=8080

# API configuration
FRONTEND_ADMIN_API_URL=http://localhost:8000
FRONTEND_ADMIN_API_TIMEOUT=30000

# Feature flags
FRONTEND_ADMIN_ENABLE_ANALYTICS=false
FRONTEND_ADMIN_ENABLE_DEBUG_TOOLS=false

# Development settings
GENERATE_SOURCEMAP=false


