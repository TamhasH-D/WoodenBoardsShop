# Buyer Frontend Environment Configuration
# Copy this file to .env and customize for your environment

### React Configuration ###
# Environment mode
NODE_ENV=production

# Backend API URL - ВАЖНО: используется для всех API запросов
REACT_APP_API_URL=http://localhost:8000

### Buyer Frontend Specific Settings ###
# Port for buyer frontend service
PORT=3000
FRONTEND_BUYER_PORT=8082

# API configuration
FRONTEND_BUYER_API_URL=http://localhost:8000
FRONTEND_BUYER_API_TIMEOUT=30000

# Feature flags
FRONTEND_BUYER_ENABLE_ANALYTICS=false
FRONTEND_BUYER_ENABLE_DEBUG_TOOLS=false

### Keycloak Authentication Configuration ###
# These are the primary variables used by services/keycloak.js
# Keycloak server URL and realm settings for buyer authentication
REACT_APP_KEYCLOAK_URL=http://localhost:8030
REACT_APP_KEYCLOAK_REALM=BuyerRealm
REACT_APP_KEYCLOAK_CLIENT_ID=buyer-frontend

# OIDC Configuration
REACT_APP_OIDC_AUTHORITY=http://localhost:8030/realms/Buyer
REACT_APP_OIDC_CLIENT_ID=buyer
REACT_APP_OIDC_REDIRECT_URI=http://localhost:8082/auth/callback
REACT_APP_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:8082
REACT_APP_OIDC_RESPONSE_TYPE=code
REACT_APP_OIDC_SCOPE=openid profile email

# Authentication settings
REACT_APP_AUTH_AUTO_SILENT_RENEW=true
REACT_APP_AUTH_LOAD_USER_INFO=true


