# Buyer Frontend Environment Variables

# Server Configuration
PORT=8082                           # Same as FRONTEND_BUYER_PORT in root .env
NODE_ENV=production

# API Configuration
REACT_APP_API_URL=http://localhost:8000  # Same as FRONTEND_BUYER_API_URL in root .env
REACT_APP_API_TIMEOUT=30000         # Same as FRONTEND_BUYER_API_TIMEOUT in root .env

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false    # Same as FRONTEND_BUYER_ENABLE_ANALYTICS in root .env
REACT_APP_ENABLE_DEBUG_TOOLS=false  # Same as FRONTEND_BUYER_ENABLE_DEBUG_TOOLS in root .env
