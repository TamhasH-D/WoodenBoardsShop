# Functional Tests Environment Configuration
# Copy this file to .env and customize for your testing environment

### Test Environment URLs ###
# Base URLs for testing different environments
BASE_URL=http://localhost:8000
ADMIN_FRONTEND_URL=http://localhost:8080
SELLER_FRONTEND_URL=http://localhost:8081
BUYER_FRONTEND_URL=http://localhost:8082

### Test Database Configuration ###
# Test database settings (separate from production)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=test_database

### Test User Credentials ###
# Test user accounts for functional testing
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=test_admin_password
TEST_SELLER_EMAIL=seller@test.com
TEST_SELLER_PASSWORD=test_seller_password
TEST_BUYER_EMAIL=buyer@test.com
TEST_BUYER_PASSWORD=test_buyer_password

### Test Configuration ###
# Test execution settings
TEST_TIMEOUT=30
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
SCREENSHOT_ON_FAILURE=true
HEADLESS_MODE=false

### Browser Configuration ###
# Browser settings for testing
BROWSER=chrome
BROWSER_VERSION=latest
WINDOW_SIZE=1920x1080

### Test Data ###
# Test data configuration
TEST_DATA_PATH=test_data/
UPLOAD_TEST_FILES_PATH=test_files/
MAX_UPLOAD_SIZE=10485760

### Reporting ###
# Test reporting configuration
REPORT_PATH=reports/
ENABLE_VIDEO_RECORDING=false
ENABLE_PERFORMANCE_MONITORING=false