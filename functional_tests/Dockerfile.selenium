# Selenium Tests Dockerfile
# Comprehensive browser testing environment

FROM python:3.12-slim

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    unzip \
    xvfb \
    && rm -rf /var/lib/apt/lists/*

# Создание рабочей директории
WORKDIR /app

# Копирование requirements
COPY requirements.txt .

# Установка Python зависимостей
RUN pip install --no-cache-dir -r requirements.txt

# Установка дополнительных пакетов для Selenium
RUN pip install --no-cache-dir \
    selenium==4.15.2 \
    pytest-selenium==4.1.0 \
    pytest-html==4.1.1 \
    pytest-xdist==3.5.0 \
    pytest-timeout==2.2.0 \
    pytest-rerunfailures==12.0 \
    allure-pytest==2.13.2 \
    pillow==10.1.0 \
    requests==2.31.0

# Создание директорий для отчетов и скриншотов
RUN mkdir -p /app/screenshots /app/test-reports /app/logs

# Копирование тестовых файлов
COPY . .

# Установка переменных окружения
ENV PYTHONPATH=/app
ENV SELENIUM_HUB_URL=http://selenium-hub:4444/wd/hub
ENV PYTEST_TIMEOUT=300
ENV SCREENSHOT_DIR=/app/screenshots
ENV REPORTS_DIR=/app/test-reports

# Создание пользователя для безопасности
RUN useradd -m -u 1000 testuser && \
    chown -R testuser:testuser /app
USER testuser

# Команда по умолчанию
CMD ["python", "-m", "pytest", "browser_tests/", "--tb=short", "--maxfail=5", "-v"]
