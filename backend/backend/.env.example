# Backend Service Configuration
# Use with: docker compose --env-file .env up

# Server Settings
BACKEND_HOST="0.0.0.0"         # Host to bind the server to
BACKEND_PORT="8000"
BACKEND_DEBUG=True             # Enable debug mode
BACKEND_LOG_LEVEL="info"       # Log level (debug, info, warning, error, critical)
BACKEND_RELOAD=True            # Enable auto-reload on code changes
BACKEND_WORKERS=1              # Number of worker processes

# PostgreSQL Settings
BACKEND_PG_HOST=postgres       # PostgreSQL host
BACKEND_PG_PORT=5432           # PostgreSQL port
BACKEND_PG_USER=backend        # PostgreSQL user
BACKEND_PG_PASSWORD=backend    # PostgreSQL password
BACKEND_PG_DATABASE=backend    # PostgreSQL database name

# Redis Settings
BACKEND_REDIS_HOST=redis       # Redis host
BACKEND_REDIS_PORT=6379        # Redis port
BACKEND_REDIS_PASSWORD=        # Redis password (leave empty for no password)
BACKEND_REDIS_MAX_CONNECTIONS=50  # Maximum number of Redis connections
