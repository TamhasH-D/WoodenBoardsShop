# CI/CD Environment Configuration Template
# Copy this file to .env.ci and customize for your CI/CD environment

### Backend API Settings ###
# Main backend service configuration for CI/CD
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=false
BACKEND_LOG_LEVEL=warning
BACKEND_RELOAD=false
BACKEND_WORKERS=1

### Database Configuration ###
# PostgreSQL database settings for CI/CD testing
# Use test database credentials
BACKEND_PG_HOST=postgres
BACKEND_PG_PORT=5432
BACKEND_PG_USER=test_user
BACKEND_PG_PASSWORD=test_password
BACKEND_PG_DATABASE=test_database

### Redis Configuration ###
# Redis cache and session storage for CI/CD
BACKEND_REDIS_HOST=redis
BACKEND_REDIS_PORT=6379
BACKEND_REDIS_PASSWORD=
BACKEND_REDIS_MAX_CONNECTIONS=50

### AI/ML Services Configuration ###
# Prosto Board Volume Detection Service for CI/CD
PROSTO_BOARD_PORT=8001
DETECT_PORT=8002
PATH_TO_YOLO_SEGMENT_MODEL=models/wood.pt
CONFIDENCE_THRESHOLD=0.5

### Frontend Configuration ###
# Global frontend environment settings for CI/CD
# Uses container-to-container communication
NODE_ENV=production
REACT_APP_API_URL=http://api:8000

### Frontend Services Ports ###
# Individual frontend service port assignments for CI/CD
FRONTEND_ADMIN_PORT=8080
FRONTEND_SELLER_PORT=8081
FRONTEND_BUYER_PORT=8082

### Frontend Service Configuration ###
# Admin Frontend Settings for CI/CD
FRONTEND_ADMIN_API_URL=http://api:8000
FRONTEND_ADMIN_API_TIMEOUT=30000
FRONTEND_ADMIN_ENABLE_ANALYTICS=false
FRONTEND_ADMIN_ENABLE_DEBUG_TOOLS=false

# Seller Frontend Settings for CI/CD
FRONTEND_SELLER_API_URL=http://api:8000
FRONTEND_SELLER_API_TIMEOUT=30000
FRONTEND_SELLER_ENABLE_ANALYTICS=false
FRONTEND_SELLER_ENABLE_DEBUG_TOOLS=false

# Buyer Frontend Settings for CI/CD
FRONTEND_BUYER_API_URL=http://api:8000
FRONTEND_BUYER_API_TIMEOUT=30000
FRONTEND_BUYER_ENABLE_ANALYTICS=false
FRONTEND_BUYER_ENABLE_DEBUG_TOOLS=false

### CORS Configuration ###
# Cross-Origin Resource Sharing settings for CI/CD environment
# Container-to-container communication URLs
BACKEND_CORS_ALLOW_ORIGINS=http://admin-frontend:80,http://seller-frontend:80,http://buyer-frontend:80,http://localhost:8080,http://localhost:8081,http://localhost:8082
BACKEND_CORS_ALLOW_CREDENTIALS=true
BACKEND_CORS_ALLOW_METHODS=*
BACKEND_CORS_ALLOW_HEADERS=*

### CI/CD Specific Settings ###
# Test environment configuration
# TEST_DATABASE_URL=postgresql://test_user:test_password@postgres:5432/test_database
# ENABLE_TEST_FIXTURES=true
